@model UpdateOrigin
<h3>@Localizer["UpdateOrigin", "Origin"]</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>@Localizer["OriginNameArabicLabel", "Origin"]</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["OriginNameEnglishLabel", "Origin"]</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionArabicLabel", "Origin"]</label>
        <textarea asp-for="DescriptionAr" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionEnglishLabel", "Origin"]</label>
        <textarea asp-for="DescriptionEn" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["ActiveLabel", "Origin"]</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">@Localizer["SaveChanges", "Origin"]</button>
</form>
<a href="@Url.Action("Index")" class="btn btn-secondary mt-2">@Localizer["BackToOriginList", "Origin"]</a>