@model IEnumerable<BrandDetails>

<div class="headerIndex">
    <h3><span class="text-truncate">Brand List</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">Add New Brand</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name (Arabic)</span></th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name (English)</span></th>
            <th><i class="bx bx-info-circle"></i> <span class="text-truncate">Description (Arabic)</span></th>
            <th><i class="bx bx-info-circle"></i> <span class="text-truncate">Description (English)</span></th>
            <th><i class="bx bx-image"></i> <span class="text-truncate">Image</span></th>
            <th><i class="bx bx-cog"></i> <span class="text-truncate">Actions</span></th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var brand in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@brand.NameAr</td>
                    <td>@brand.NameEn</td>
                    <td>@brand.DescriptionAr</td>
                    <td>@brand.DescriptionEn</td>
                    <td>
                        @if (!string.IsNullOrEmpty(brand.ImageUrl))
                        {
                            <img src="@brand.ImageUrl" alt="Brand Image" width="100" class="rounded shadow" />
                        }
                        else
                        {
                            <i class="bx bx-image-alt text-muted"></i> <p>No Image</p>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = brand.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> Edit
                                </a>
                                <form action="@Url.Action("Delete", new { id = brand.Id })" method="post" class="dropdown-item">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No brands available.</td>
            </tr>
        }
    </tbody>
</table>
