@model AddFuelType

<h3>Add New Fuel Type</h3>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name (Arabic)</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Name (English)</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description (Arabic)</label>
        <textarea asp-for="DescriptionAr" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Description (English)</label>
        <textarea asp-for="DescriptionEn" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label>Active</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Fuel Type</button>
</form>
