@model IEnumerable<JobDTO>

<h2>Job List</h2>
<a href="@Url.Action("Create")" class="btn btn-success mb-3">Add New Job</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>IsConvertable</th>
            <th>Percentage</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Name</td>
                <td>@job.Description</td>
                <td>@job.Percentage</td>
                <td>@job.IsConvertable</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = job.Id })" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@job.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
