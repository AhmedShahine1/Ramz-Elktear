@model JobDTO

@{
    ViewData["Title"] = @Localizer["EditJob", "Job"];
}

<h2>@Localizer["EditJob", "Job"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">@Localizer["JobName", "Job"]</label>
        <input asp-for="Name"
               class="form-control"
               placeholder="@Localizer["JobNamePlaceholder", "Job"]" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Percentage", "Job"]</label>
        <input asp-for="Percentage"
               class="form-control"
               type="number"
               min="0"
               max="100"
               step="0.01"
               placeholder="@Localizer["PercentagePlaceholder", "Job"]" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Description", "Job"]</label>
        <textarea asp-for="Description"
                  class="form-control"
                  rows="4"
                  placeholder="@Localizer["DescriptionPlaceholder", "Job"]"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox"
               asp-for="IsConvertable"
               class="form-check-input"
               id="IsConvertableCheck" />
        <label class="form-check-label" for="IsConvertableCheck">
            @Localizer["IsConvertable", "Job"]
        </label>
        <span asp-validation-for="IsConvertable" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>@Localizer["Update", "Job"]
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
            <i class="fas fa-times me-2"></i>@Localizer["Cancel", "Job"]
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}