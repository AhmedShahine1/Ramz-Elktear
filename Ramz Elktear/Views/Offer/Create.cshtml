@model AddOffer
<h3 class="text-truncate">@Localizer["CreateOffer", "Offer"]</h3>
<form asp-action="Create" method="post" enctype="multipart/form-data" id="offerForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="NameAr" class="text-truncate">@Localizer["OfferNameArabicLabel", "Offer"]</label>
        <input type="text" class="form-control" asp-for="NameAr" required />
    </div>
    <div class="form-group">
        <label for="NameEn" class="text-truncate">@Localizer["OfferNameEnglishLabel", "Offer"]</label>
        <input type="text" class="form-control" asp-for="NameEn" required />
    </div>
    <div class="form-group">
        <label for="NewPrice" class="text-truncate">@Localizer["NewPriceLabel", "Offer"]</label>
        <input type="number" class="form-control" asp-for="NewPrice" required step="0.01" />
    </div>
    <div class="form-group">
        <label for="Image" class="text-truncate">@Localizer["OfferImageLabel", "Offer"]</label>
        <input type="file" class="form-control" asp-for="Image" accept="image/*" id="imageUpload" onchange="validateImage()" />
        <small id="imageError" class="form-text text-danger" style="display:none;">@Localizer["ImageValidationError", "Offer"]</small>
    </div>
    <div class="form-group">
        <label for="StartDate" class="text-truncate">@Localizer["StartDateLabel", "Offer"]</label>
        <input type="date" class="form-control" asp-for="StartDate" required />
    </div>
    <div class="form-group">
        <label for="EndDate" class="text-truncate">@Localizer["EndDateLabel", "Offer"]</label>
        <input type="date" class="form-control" asp-for="EndDate" required />
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="Delivery" />
        <label class="form-check-label text-truncate" for="Delivery">@Localizer["DeliveryLabel", "Offer"]</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success text-truncate" id="submitBtn">@Localizer["AddOffer", "Offer"]</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary text-truncate">@Localizer["BackToOfferList", "Offer"]</a>
    </div>
</form>
<script>
    function validateImage() {
        const fileInput = document.getElementById('imageUpload');
        const imageError = document.getElementById('imageError');
        const submitButton = document.getElementById('submitBtn');
        const file = fileInput.files[0];
        if (file) {
            const img = new Image();
            img.onload = function () {
                const width = img.width;
                const height = img.height;
                // Check if the image dimensions are 1920x683
                if (width === 1920 && height === 683) {
                    imageError.style.display = 'none';  // Hide error message if valid
                    submitButton.disabled = false;  // Enable submit button
                } else {
                    imageError.style.display = 'block';  // Show error message
                    submitButton.disabled = true;  // Disable submit button
                }
            };
            img.src = URL.createObjectURL(file);  // Load the image for validation
        }
    }
</script>