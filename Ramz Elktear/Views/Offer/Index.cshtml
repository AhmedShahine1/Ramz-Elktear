@model IEnumerable<OfferDTO>
<div class="headerIndex">
    <h3><span class="text-truncate">@Localizer["OfferList", "Offer"]</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">@Localizer["AddNewOffer", "Offer"]</span>
    </a>
    <a href="@Url.Action("AllOffers","Report")" class="btn btn-info mb-3">
        <i class="bx bx-file"></i> <span class="text-truncate">@Localizer["Report", "Offer"]</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Localizer["SerialNumber", "Offer"]</th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">@Localizer["NameArabic", "Offer"]</span></th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">@Localizer["NameEnglish", "Offer"]</span></th>
            <th><i class="bx bx-calendar"></i> <span class="text-truncate">@Localizer["StartDate", "Offer"]</span></th>
            <th><i class="bx bx-calendar"></i> <span class="text-truncate">@Localizer["EndDate", "Offer"]</span></th>
            <th><i class="bx bx-price-tag"></i> <span class="text-truncate">@Localizer["NewPrice", "Offer"]</span></th>
            <th><i class="bx bx-image"></i> <span class="text-truncate">@Localizer["Image", "Offer"]</span></th>
            <th><i class="bx bx-cog"></i> <span class="text-truncate">@Localizer["Actions", "Offer"]</span></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var offer in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@offer.NameAr</td>
                    <td>@offer.NameEn</td>
                    <td>@offer.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@offer.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td>@offer.NewPrice.ToString("C")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(offer.ImageUrl))
                        {
                            <img src="@offer.ImageUrl" alt="Offer Image" width="100" class="rounded shadow" />
                        }
                        else
                        {
                            <i class="bx bx-image-alt text-muted"></i> <p>@Localizer["NoImage", "Offer"]</p>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { offerId = offer.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> @Localizer["Edit", "Offer"]
                                </a>
                                <form action="@Url.Action("Delete", new { offerId = offer.Id })" method="post" class="dropdown-item" onsubmit="return confirm('@Localizer["ConfirmDelete", "Offer"]')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> @Localizer["Delete", "Offer"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">@Localizer["NoOffersAvailable", "Offer"]</td>
            </tr>
        }
    </tbody>
</table>