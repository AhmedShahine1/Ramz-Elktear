@model IEnumerable<OfferDTO>

<div class="headerIndex">
    <h3><span class="text-truncate">Offer List</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">Add New Offer</span>
    </a>
    <a href="@Url.Action("AllOffers","Report")" class="btn btn-info mb-3">
        <i class="bx bx-file"></i> <span class="text-truncate">Report</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name (Arabic)</span></th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name (English)</span></th>
            <th><i class="bx bx-calendar"></i> <span class="text-truncate">Start Date</span></th>
            <th><i class="bx bx-calendar"></i> <span class="text-truncate">End Date</span></th>
            <th><i class="bx bx-price-tag"></i> <span class="text-truncate">New Price</span></th>
            <th><i class="bx bx-image"></i> <span class="text-truncate">Image</span></th>
            <th><i class="bx bx-cog"></i> <span class="text-truncate">Actions</span></th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var offer in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@offer.NameAr</td>
                    <td>@offer.NameEn</td>
                    <td>@offer.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@offer.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td>@offer.NewPrice.ToString("C")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(offer.ImageUrl))
                        {
                            <img src="@offer.ImageUrl" alt="Offer Image" width="100" class="rounded shadow" />
                        }
                        else
                        {
                            <i class="bx bx-image-alt text-muted"></i> <p>No Image</p>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = offer.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> Edit
                                </a>
                                <form action="@Url.Action("Delete", new { id = offer.Id })" method="post" class="dropdown-item">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No offers available.</td>
            </tr>
        }
    </tbody>
</table>
