@model IEnumerable<ColorDTO>

<div class="headerIndex">
    <h3><span class="text-truncate">Color List</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">Add New Color</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name</span></th>
            <th><i class="bx bx-palette"></i> <span class="text-truncate">Value</span></th>
            <th><i class="bx bx-check-circle"></i> <span class="text-truncate">Active</span></th>
            <th><i class="bx bx-cog"></i> <span class="text-truncate">Actions</span></th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var color in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@color.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(color.Value))
                        {
                            <span class="badge" style="background-color:@color.Value; color:#fff;width: 25px;height: 25px;padding: 5px;">
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No color</span>
                        }
                    </td>
                    <td>
                        @if (color.IsActive)
                        {
                            <span class="badge bg-label-primary">
                                <i class="bx bx-check"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-label-danger">
                                <i class="bx bx-x"></i> Inactive
                            </span>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = color.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> Edit
                                </a>
                                <form action="@Url.Action("Delete", new { id = color.Id })" method="post" class="dropdown-item">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No colors available.</td>
            </tr>
        }
    </tbody>
</table>
