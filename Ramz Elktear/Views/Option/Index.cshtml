@model IEnumerable<OptionDTO>
<div class="headerIndex">
    <h3><span class="text-truncate">@Localizer["OptionList", "Option"]</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">@Localizer["AddNewOption", "Option"]</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Localizer["SerialNumber", "Option"]</th>
            <th><span class="text-truncate">@Localizer["NameArabic", "Option"]</span></th>
            <th><span class="text-truncate">@Localizer["NameEnglish", "Option"]</span></th>
            <th><span class="text-truncate">@Localizer["Status", "Option"]</span></th>
            <th><span class="text-truncate">@Localizer["Actions", "Option"]</span></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var option in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@option.NameAr</td>
                    <td>@option.NameEn</td>
                    <td>
                        @if (option.IsActive)
                        {
                            <span class="badge bg-label-primary">@Localizer["Active", "Option"]</span>
                        }
                        else
                        {
                            <span class="badge bg-label-danger">@Localizer["Inactive", "Option"]</span>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = option.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> @Localizer["Edit", "Option"]
                                </a>
                                <form action="@Url.Action("Delete", new { id = option.Id })" method="post" class="dropdown-item" onsubmit="return confirm('@Localizer["ConfirmDelete", "Option"]')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> @Localizer["Delete", "Option"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">@Localizer["NoOptionsAvailable", "Option"]</td>
            </tr>
        }
    </tbody>
</table>