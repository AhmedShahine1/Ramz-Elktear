@model UpdateOptionDTO
<h3>@Localizer["UpdateOption", "Option"]</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>@Localizer["OptionNameArabicLabel", "Option"]</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["OptionNameEnglishLabel", "Option"]</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionArabicLabel", "Option"]</label>
        <textarea asp-for="DescriptionAr" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionEnglishLabel", "Option"]</label>
        <textarea asp-for="DescriptionEn" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["ActiveLabel", "Option"]</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">@Localizer["SaveChanges", "Option"]</button>
</form>