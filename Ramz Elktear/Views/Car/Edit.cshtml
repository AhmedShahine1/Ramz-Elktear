@model UpdateCarDTO
@{
    ViewData["Title"] = "Edit Car";
}

<h3>Edit Car</h3>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label>Name (Arabic)</label>
                <input type="text" class="form-control" asp-for="NameAr" required />
                <span class="text-danger" asp-validation-for="NameAr"></span>
            </div>

            <div class="mb-3">
                <label>Name (English)</label>
                <input type="text" class="form-control" asp-for="NameEn" required />
                <span class="text-danger" asp-validation-for="NameEn"></span>
            </div>

            <div class="mb-3">
                <label>Description (Arabic)</label>
                <textarea class="form-control" asp-for="DescrptionAr" required></textarea>
                <span class="text-danger" asp-validation-for="DescrptionAr"></span>
            </div>

            <div class="mb-3">
                <label>Description (English)</label>
                <textarea class="form-control" asp-for="DescrptionEn" required></textarea>
                <span class="text-danger" asp-validation-for="DescrptionEn"></span>
            </div>

            <div class="mb-3">
                <label>Car Code</label>
                <input type="text" class="form-control" asp-for="CarCode" required />
                <span class="text-danger" asp-validation-for="CarCode"></span>
            </div>

            <div class="mb-3">
                <label>Car SKU</label>
                <input type="text" class="form-control" asp-for="CarSKU" required />
                <span class="text-danger" asp-validation-for="CarSKU"></span>
            </div>

            <div class="mb-3">
                <label>Car Image</label>
                <input type="file" class="form-control" asp-for="Image" />
                <span class="text-danger" asp-validation-for="Image"></span>
                <img id="imagePreview" src="#" style="display: none; width: 100px; height: 100px;" />
            </div>
            <div class="mb-3">
                <label>Inside Car Images</label>
                <input type="file" class="form-control" asp-for="InsideCarImages" multiple />
                <span class="text-danger" asp-validation-for="InsideCarImages"></span>
            </div>

            <div class="mb-3">
                <label>Car Image Without Background</label>
                <input type="file" class="form-control" asp-for="ImageWithoutBackground" />
                <span class="text-danger" asp-validation-for="ImageWithoutBackground"></span>
            </div>
            <img id="imageWithoutBackgroundPreview" src="#" style="display: none; width: 100px; height: 100px;" />

            <div class="mb-3">
                <label>Additional Images</label>
                <input type="file" class="form-control" asp-for="Images" multiple />
                <span class="text-danger" asp-validation-for="Images"></span>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label>Selling Price</label>
                <input type="number" class="form-control" asp-for="SellingPrice" required />
                <span class="text-danger" asp-validation-for="SellingPrice"></span>
            </div>

            <div class="mb-3">
                <label>Installment Price</label>
                <input type="number" class="form-control" asp-for="InstallmentPrice" required />
                <span class="text-danger" asp-validation-for="InstallmentPrice"></span>
            </div>

            <div class="mb-3">
                <label>Quantity in Stock</label>
                <input type="number" class="form-control" asp-for="QuantityInStock" required />
                <span class="text-danger" asp-validation-for="QuantityInStock"></span>
            </div>

            <div class="mb-3">
                <label>Kilometers</label>
                <input type="number" class="form-control" asp-for="Kilometers" required />
                <span class="text-danger" asp-validation-for="Kilometers"></span>
            </div>

            <div class="mb-3">
                <label>Specifications</label>
                <select class="form-control" asp-for="SpecificationsId" asp-items="ViewBag.Specifications" multiple></select>
                <span class="text-danger" asp-validation-for="SpecificationsId"></span>
            </div>

            <div class="mb-3">
                <label>Color</label>
                <select class="form-control" asp-for="ColorId" asp-items="ViewBag.Colors" multiple></select>
                <span class="text-danger" asp-validation-for="ColorId"></span>
            </div>

            <div class="mb-3">
                <label>Offer</label>
                <select class="form-control" asp-for="OfferId" asp-items="ViewBag.Offers" multiple></select>
                <span class="text-danger" asp-validation-for="OfferId"></span>
            </div>

            <div class="mb-3">
                <label>Brand</label>
                <select class="form-control" asp-for="BrandId" asp-items="ViewBag.Brands" required></select>
                <span class="text-danger" asp-validation-for="BrandId"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Additional Details -->
        <div class="col-md-6">
            <div class="mb-3">
                <label>Transmission Type</label>
                <select class="form-control" asp-for="TransmissionTypeId" asp-items="ViewBag.TransmissionTypes" required></select>
                <span class="text-danger" asp-validation-for="TransmissionTypeId"></span>
            </div>

            <div class="mb-3">
                <label>Fuel Type</label>
                <select class="form-control" asp-for="FuelTypeId" asp-items="ViewBag.FuelTypes" required></select>
                <span class="text-danger" asp-validation-for="FuelTypeId"></span>
            </div>

            <div class="mb-3">
                <label>Engine Size</label>
                <select class="form-control" asp-for="EngineSizeId" asp-items="ViewBag.EngineSizes" required></select>
                <span class="text-danger" asp-validation-for="EngineSizeId"></span>
            </div>

            <div class="mb-3">
                <label>Model Year</label>
                <select class="form-control" asp-for="ModelYearId" asp-items="ViewBag.ModelYears" required></select>
                <span class="text-danger" asp-validation-for="ModelYearId"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label>Engine Position</label>
                <select class="form-control" asp-for="EnginePositionId" asp-items="ViewBag.EnginePositions" required></select>
                <span class="text-danger" asp-validation-for="EnginePositionId"></span>
            </div>

            <div class="mb-3">
                <label>Origin</label>
                <select class="form-control" asp-for="OriginId" asp-items="ViewBag.Origins" required></select>
                <span class="text-danger" asp-validation-for="OriginId"></span>
            </div>

            <div class="mb-3">
                <label>Subcategory</label>
                <select class="form-control" asp-for="SubCategoryId" asp-items="ViewBag.SubCategories" required></select>
                <span class="text-danger" asp-validation-for="SubCategoryId"></span>
            </div>

            <div class="mb-3">
                <label>Option</label>
                <select class="form-control" asp-for="OptionId" asp-items="ViewBag.Options" required></select>
                <span class="text-danger" asp-validation-for="OptionId"></span>
            </div>
        </div>
    </div>

    <!-- Checkbox Fields -->
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IsSpecial" />
        <label class="form-check-label">Is Special</label>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>
@section Scripts {
    <script>
        function previewImage(input, previewId) {
            let reader = new FileReader();
            reader.onload = function() {
                let output = document.getElementById(previewId);
                output.src = reader.result;
                output.style.display = "block";
            };
            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }

        document.getElementById("Image").addEventListener("change", function(event) {
            previewImage(event.target, "imagePreview");
        });

        document.getElementById("ImageWithoutBackground").addEventListener("change", function(event) {
            previewImage(event.target, "imageWithoutBackgroundPreview");
        });
    </script>
}
