@model CarDTO

@{
    string language = Context.Request.Query["lang"].FirstOrDefault() ?? "ar";  // Default to Arabic
    bool isArabic = language == "ar";
    var direction = isArabic ? "rtl" : "ltr";
    var textAlign = isArabic ? "text-end" : "text-start";
}

<div class="container py-5" dir="@direction">
    <!-- Language Switcher -->
    <div class="text-end mb-3">
        <button onclick="switchLanguage()" class="btn btn-outline-secondary btn-sm">
            @(isArabic ? "English" : "العربية")
        </button>
    </div>

    <div class="row gx-5">
        <!-- Product Images Gallery -->
        <aside class="col-lg-6 mb-4">
            <div class="border rounded-4 mb-3 d-flex justify-content-center">
                <img id="mainImage" class="rounded-4 img-fluid" style="max-height: 400px; object-fit: contain;" src="@Model.ImageUrl" alt="@(isArabic ? Model.NameAr : Model.NameEn)" />
            </div>
            <div class="d-flex flex-wrap justify-content-center mb-3 gallery-thumbnails">
                @foreach (var imageUrl in Model.ImagesUrl)
                {
                    <a class="border mx-1 rounded-2 thumbnail-container" onclick="swapImage(this)">
                        <img width="60" height="60" class="rounded-2" src="@imageUrl" alt="Car thumbnail" />
                    </a>
                }
            </div>
        </aside>

        <!-- Product Information -->
        <main class="col-lg-6">
            <div class="@textAlign">
                <h4 class="title text-dark mb-4">@(isArabic ? Model.NameAr : Model.NameEn)</h4>

                <div class="info-grid mb-4">
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "كود السيارة" : "Car Code"):</span>
                        <span class="info-value">@Model.CarCode</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "رقم تعريف السيارة" : "Car SKU"):</span>
                        <span class="info-value">@Model.CarSKU</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "الفئة الفرعية" : "SubCategory"):</span>
                        <span class="info-value">@(isArabic ? Model.SubCategory?.NameAr : Model.SubCategory?.NameEn)</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "عدد الكيلومترات" : "Kilometers"):</span>
                        <span class="info-value">@Model.Kilometers</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "سعر التقسيط" : "Installment Price"):</span>
                        <span class="info-value fw-bold">@Model.InstallmentPrice</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "سعر البيع" : "Selling Price"):</span>
                        <span class="info-value fw-bold">@Model.SellingPrice</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "الحالة" : "Status"):</span>
                        <span class="info-value">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">@(isArabic ? "نشط" : "Active")</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@(isArabic ? "غير نشط" : "Inactive")</span>
                            }
                        </span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "مميز" : "Special"):</span>
                        <span class="info-value">
                            @if (Model.IsSpecial)
                            {
                                <span class="badge bg-warning text-dark">@(isArabic ? "نعم" : "Yes")</span>
                            }
                            else
                            {
                                <span>@(isArabic ? "لا" : "No")</span>
                            }
                        </span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">@(isArabic ? "اللون" : "Color"):</span>
                        <span class="d-inline-flex gap-1 align-items-center">
                            @foreach (var color in Model.Color)
                            {
                                <span class="color-swatch" style="background-color:@color.Value;" title="@color.Value"></span>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Tabs Section -->
    <section class="mt-5">
        <ul class="nav nav-tabs" id="carDetailsTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="true">
                    @(isArabic ? "التفاصيل" : "Details")
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="specifications-tab" data-bs-toggle="tab" data-bs-target="#specifications" type="button" role="tab" aria-controls="specifications" aria-selected="false">
                    @(isArabic ? "المواصفات" : "Specifications")
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="offers-tab" data-bs-toggle="tab" data-bs-target="#offers" type="button" role="tab" aria-controls="offers" aria-selected="false">
                    @(isArabic ? "العروض" : "Offers")
                </button>
            </li>
        </ul>

        <div class="tab-content pt-3 pb-5" id="carDetailsTabsContent">
            <!-- Details Tab -->
            <div class="tab-pane fade show active @textAlign" id="details" role="tabpanel" aria-labelledby="details-tab">
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">@(isArabic ? "الوصف" : "Description"):</dt>
                            <dd class="col-sm-9">@(isArabic ? Model.DescrptionAr : Model.DescrptionEn)</dd>

                            <dt class="col-sm-3">@(isArabic ? "موديل السنة" : "Model Year"):</dt>
                            <dd class="col-sm-9">@Model.ModelYear.Name</dd>

                            <dt class="col-sm-3">@(isArabic ? "موضع المحرك" : "Engine Position"):</dt>
                            <dd class="col-sm-9">@(isArabic ? Model.EnginePosition?.NameAr : Model.EnginePosition?.NameEn)</dd>

                            <dt class="col-sm-3">@(isArabic ? "ناقل الحركة" : "Transmission Type"):</dt>
                            <dd class="col-sm-9">@(isArabic ? Model.TransmissionType?.NameAr : Model.TransmissionType?.NameEn)</dd>

                            <dt class="col-sm-3">@(isArabic ? "حجم المحرك" : "Engine Size"):</dt>
                            <dd class="col-sm-9">@(isArabic ? Model.EngineSize?.NameAr : Model.EngineSize?.NameEn)</dd>

                            <dt class="col-sm-3">@(isArabic ? "الخيار" : "Option"):</dt>
                            <dd class="col-sm-9">@(isArabic ? Model.Option?.NameAr : Model.Option?.NameEn)</dd>

                            <dt class="col-sm-3">@(isArabic ? "الأصل" : "Origin"):</dt>
                            <dd class="col-sm-9">@(isArabic ? Model.Origin?.NameAr : Model.Origin?.NameEn)</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Specifications Tab -->
            <div class="tab-pane fade @textAlign" id="specifications" role="tabpanel" aria-labelledby="specifications-tab">
                <div class="card">
                    <div class="card-body">
                        @if (Model.Specifications != null && Model.Specifications.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var specification in Model.Specifications)
                                {
                                    <li class="list-group-item">@(isArabic ? specification.NameAr : specification.NameEn)</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">@(isArabic ? "لا توجد مواصفات متاحة" : "No specifications available")</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Offers Tab -->
            <div class="tab-pane fade @textAlign" id="offers" role="tabpanel" aria-labelledby="offers-tab">
                <div class="card">
                    <div class="card-body">
                        @if (Model.Offer != null && Model.Offer.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var offer in Model.Offer)
                                {
                                    <li class="list-group-item">@(isArabic ? offer.NameAr : offer.NameEn)</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">@(isArabic ? "لا توجد عروض متاحة" : "No offers available")</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Action Buttons -->
    <div class="text-center py-4">
        <a href="@Url.Action("Index")" class="btn btn-primary">
            @(isArabic ? "العودة إلى القائمة" : "Back to List")
        </a>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .color-swatch {
        width: 25px;
        height: 25px;
        display: inline-block;
        border-radius: 50%;
        border: 2px solid #333;
    }

    .thumbnail-container {
        cursor: pointer;
        transition: all 0.2s;
    }

        .thumbnail-container:hover {
            transform: scale(1.05);
        }

    .info-item {
        margin-bottom: 10px;
    }

    .info-label {
        font-weight: bold;
        margin-right: 8px;
    }
</style>

<!-- Scripts -->
<script>
    // Language handling
    document.addEventListener('DOMContentLoaded', function() {
        // Get language from localStorage (default to Arabic "ar" if not set)
        let selectedLang = localStorage.getItem("selectedLang") || "ar";

        // Update the URL with the selected language if not already set
        const urlParams = new URLSearchParams(window.location.search);
        if (!urlParams.has("lang") || urlParams.get("lang") !== selectedLang) {
            urlParams.set("lang", selectedLang);
            history.replaceState(null, "", "?" + urlParams.toString());
        }
    });

    // Function to toggle language and reload the page
    function switchLanguage() {
        const urlParams = new URLSearchParams(window.location.search);
        const currentLang = urlParams.get("lang") || "ar";
        const newLang = currentLang === "ar" ? "en" : "ar";

        // Store in localStorage
        localStorage.setItem("selectedLang", newLang);

        // Update URL and reload
        urlParams.set("lang", newLang);
        window.location.search = urlParams.toString();
    }

    // Image gallery functionality
    function swapImage(element) {
        const mainImage = document.getElementById("mainImage");
        const thumbnailImg = element.querySelector('img');

        if (mainImage && thumbnailImg) {
            const tempSrc = mainImage.src;
            const tempAlt = mainImage.alt;

            mainImage.src = thumbnailImg.src;
            thumbnailImg.src = tempSrc;
        }
    }
</script>