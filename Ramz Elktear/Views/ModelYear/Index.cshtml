@model IEnumerable<ModelYearDTO>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">@Localizer["ModelYearList", "ModelYear"]</h4>
                <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                    @Localizer["AddNewModelYear", "ModelYear"]
                </a>
            </div>

            <!-- Stats -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@(Model?.Count() ?? 0)</h5>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@(Model?.Count(m => m.IsActive) ?? 0)</h5>
                            <small class="text-muted">@Localizer["ActiveStatus", "ModelYear"]</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@(Model?.Count(m => !m.IsActive) ?? 0)</h5>
                            <small class="text-muted">@Localizer["InactiveStatus", "ModelYear"]</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h6 class="mb-0">@Localizer["ModelYearList", "ModelYear"]</h6>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex gap-2 justify-content-end">
                                <input type="text" class="form-control form-control-sm"
                                       placeholder="Search..." id="searchInput" style="max-width: 200px;">
                                <select class="form-select form-select-sm" id="filterSelect" style="max-width: 120px;">
                                    <option value="all">All</option>
                                    <option value="active">@Localizer["ActiveStatus", "ModelYear"]</option>
                                    <option value="inactive">@Localizer["InactiveStatus", "ModelYear"]</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Localizer["SerialNumber", "ModelYear"]</th>
                                        <th>@Localizer["Name", "ModelYear"]</th>
                                        <th>@Localizer["Active", "ModelYear"]</th>
                                        <th width="100">@Localizer["Actions", "ModelYear"]</th>
                                    </tr>
                                </thead>
                                <tbody id="tableBody">
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var modelYear in Model)
                                    {
                                        <tr class="table-row" data-status="@(modelYear.IsActive ? "active" : "inactive")"
                                            data-name="@modelYear.Name.ToLower()">
                                            <td>@index</td>
                                            <td>
                                                <div>
                                                    <strong>@modelYear.Name</strong>
                                                </div>
                                            </td>
                                            <td>
                                                @if (modelYear.IsActive)
                                                {
                                                    <span class="badge bg-success">@Localizer["ActiveStatus", "ModelYear"]</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@Localizer["InactiveStatus", "ModelYear"]</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Edit", new { id = modelYear.Id })"
                                                       class="btn btn-outline-primary btn-sm">@Localizer["Edit", "ModelYear"]</a>
                                                    <form action="@Url.Action("Delete", new { id = modelYear.Id })"
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                                onclick="return confirm('@Localizer["ConfirmDelete", "ModelYear"]')">
                                                            @Localizer["Delete", "ModelYear"]
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h5 class="text-muted">@Localizer["NoModelYearsAvailable", "ModelYear"]</h5>
                            <p class="text-muted">Start by creating your first model year</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">@Localizer["AddNewModelYear", "ModelYear"]</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const filterSelect = document.getElementById('filterSelect');
        const tableRows = document.querySelectorAll('.table-row');

        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const statusFilter = filterSelect.value;
            let visibleCount = 0;

            tableRows.forEach(row => {
                const name = row.dataset.name || '';
                const status = row.dataset.status || '';

                const matchesSearch = !searchTerm || name.includes(searchTerm);
                const matchesFilter = statusFilter === 'all' || status === statusFilter;

                if (matchesSearch && matchesFilter) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });
        }

        if (searchInput) {
            searchInput.addEventListener('input', filterTable);
        }

        if (filterSelect) {
            filterSelect.addEventListener('change', filterTable);
        }
    });
</script>