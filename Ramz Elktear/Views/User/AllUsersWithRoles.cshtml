@model List<UserRoleDTO>

<div class="container-fluid py-4" dir="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-dark fw-bold mb-1">
                        <i class="fas fa-users text-primary me-2"></i>
                        @Localizer["AllUsersWithRoles", "User"]
                    </h2>
                    <p class="text-muted mb-0">@Localizer["ManageUsers", "User"]</p>
                </div>
            </div>

            <!-- Users Table Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light border-bottom">
                                <tr>
                                    <th class="px-4 py-3 border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user text-muted me-2"></i>
                                            <span class="fw-semibold text-dark">@Localizer["FullName", "User"]</span>
                                        </div>
                                    </th>
                                    <th class="px-4 py-3 border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-phone text-muted me-2"></i>
                                            <span class="fw-semibold text-dark">@Localizer["PhoneNumber", "User"]</span>
                                        </div>
                                    </th>
                                    <th class="px-4 py-3 border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-tag text-muted me-2"></i>
                                            <span class="fw-semibold text-dark">@Localizer["Role", "User"]</span>
                                        </div>
                                    </th>
                                    <th class="px-4 py-3 border-0 text-center">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="fas fa-cogs text-muted me-2"></i>
                                            <span class="fw-semibold text-dark">@Localizer["Actions", "Common"]</span>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var user in Model)
                                    {
                                        <tr class="border-bottom border-light">
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-3">
                                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                             style="width: 40px; height: 40px; font-size: 16px; font-weight: 600;">
                                                            @(user.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold text-dark">@user.FullName</div>
                                                        <small class="text-muted">@Localizer["UserAccount", "User"]</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <div class="text-dark">
                                                    <i class="fas fa-phone text-muted me-2"></i>
                                                    @user.PhoneNumber
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (user.Roles != null && user.Roles.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var role in user.Roles)
                                                        {
                                                            <span class="badge bg-opacity-10 text-primary border border-primary border-opacity-25 px-2 py-1">
                                                                @role
                                                            </span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-2 py-1">
                                                        @Localizer["NoRole", "User"]
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="@Url.Action("UpdateProfile", new { userId = user.UserId })"
                                                       class="btn btn-sm btn-outline-primary rounded-pill px-3"
                                                       data-bs-toggle="tooltip"
                                                       title="@Localizer["UpdateProfile", "User"]">
                                                        <i class="fas fa-edit me-1"></i>
                                                        <span class="d-none d-lg-inline">@Localizer["Edit", "Common"]</span>
                                                    </a>
                                                    <a href="@Url.Action("ChangePassword", new { userId = user.UserId })"
                                                       class="btn btn-sm btn-outline-warning rounded-pill px-3"
                                                       data-bs-toggle="tooltip"
                                                       title="@Localizer["ChangePassword", "User"]">
                                                        <i class="fas fa-key me-1"></i>
                                                        <span class="d-none d-lg-inline">@Localizer["Password", "User"]</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fas fa-users fa-3x mb-3 text-muted opacity-50"></i>
                                                <h5 class="text-muted">@Localizer["NoUsersFound", "User"]</h5>
                                                <p class="mb-0">@Localizer["NoUsersMessage", "User"]</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="card-footer bg-light border-top-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                <i class="fas fa-info-circle me-2"></i>
                                <span class="fw-medium">@Localizer["TotalUsers", "User"]</span>
                                <span class="badge bg-primary ms-1">@Model.Count()</span>
                            </div>
                            <small class="text-muted">
                                @Localizer["LastUpdated", "Common"] @DateTime.Now.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>