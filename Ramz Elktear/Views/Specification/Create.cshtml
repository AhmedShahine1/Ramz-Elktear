@model Ramz_Elktear.core.DTO.SpecificationModels.AddSpecification

<h3>Create New Specification</h3>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Name (Arabic)</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Name (English)</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Active</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Create Specification</button>
</form>
