@model UpdateSpecification

<h3>Edit Specification</h3>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name (Arabic)</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Name (English)</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Active</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
