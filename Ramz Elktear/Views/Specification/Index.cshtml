@model IEnumerable<SpecificationDTO>

<div class="headerIndex">
    <h3><span class="text-truncate">Specification List</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">Add New Specification</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name (Arabic)</span></th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">Name (English)</span></th>
            <th><i class="bx bx-check-circle"></i> <span class="text-truncate">Active</span></th>
            <th><i class="bx bx-cog"></i> <span class="text-truncate">Actions</span></th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var specification in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@specification.NameAr</td>
                    <td>@specification.NameEn</td>
                    <td>
                        @if (specification.IsActive)
                        {
                            <span class="badge bg-label-primary">
                                <i class="bx bx-check"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-label-danger">
                                <i class="bx bx-x"></i> Inactive
                            </span>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = specification.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> Edit
                                </a>
                                <form action="@Url.Action("Delete", new { id = specification.Id })" method="post" class="dropdown-item">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No specifications available.</td>
            </tr>
        }
    </tbody>
</table>
