                const isRTL = document.documentElement.lang === 'ar';

                // Remove both classes first
                document.getElementById("left-section").classList.remove("me-auto", "ms-auto");
                document.getElementById("right-section").classList.remove("me-auto", "ms-auto");

                // Add only the correct one based on direction
                if (isRTL) {
                    document.getElementById("left-section").classList.add("ms-auto");
                    document.getElementById("right-section").classList.remove("me-auto", "ms-auto");
                } else {
                    document.getElementById("left-section").classList.add("me-auto");
                    document.getElementById("right-section").classList.add("ms-auto");
                }
                // Swap text direction
                document.body.classList.toggle("rtl", lang === "ar");

                // Update text content dynamically based on language
                document.querySelectorAll(".text-truncate").forEach(item => {
                    let text = item.innerText.trim();
                    item.innerText = lang === "en" ? getKeyByValue(text) : translations[text];
                });
            }

            function getKeyByValue(value) {
                return Object.keys(translations).find(key => translations[key] === value) || value;
            }
