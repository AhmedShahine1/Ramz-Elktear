            // Translation function - handles DOM layout direction
            function setLanguage(lang) {
                htmlElement.lang = lang;
                const isRTL = lang === 'ar';

                // Handle RTL/LTR layout
                body.classList.toggle("rtl", isRTL);

                // Reset classes first to avoid duplicates
                leftSection.classList.remove("me-auto", "ms-auto");
                rightSection.classList.remove("me-auto", "ms-auto");

                // Apply correct classes based on direction
                if (isRTL) {
                    leftSection.classList.add("ms-auto");
                } else {
                    leftSection.classList.add("me-auto");
                    rightSection.classList.add("ms-auto");
                }
            }

            // Translate page content without reload
            function translatePage(lang) {
                // Use a batch update approach to improve performance
                const updates = [];

                textElements.forEach(item => {
                    const text = item.innerText.trim();

                    let translatedText;
                    if (lang === "en") {
                        // Arabic to English
                        translatedText = reverseTranslations[text] || text;
                    } else {
                        // English to Arabic
                        translatedText = translations[text] || text;
                    }

                    updates.push({ element: item, text: translatedText });
                });

                // Apply all updates at once to minimize reflows
                requestAnimationFrame(() => {
                    updates.forEach(update => {
                        update.element.innerText = update.text;
                    });
                });
            }

            // Initialize with saved language preference
            const savedLang = localStorage.getItem("selectedLang") || "ar";
            setLanguage(savedLang);
            translatePage(savedLang);
        });

