@model Ramz_Elktear.core.DTO.BookingModels.BookingDto
@{
    ViewData["Title"] = Localizer["BookingDetails", "Booking"];
}
<h2 class="text-center text-truncate" dir="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">@Localizer["BookingDetails", "Booking"]</h2>
@if (Model != null)
{
    <div class="card">
        <div class="card-body" dir="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
            <h4 class="card-title"><span class="text-truncate">@Localizer["Status", "Booking"]:</span> @Model.BookingStatusDisplay</h4>

            <h5 class="text-truncate">@Localizer["BuyerInformation", "Booking"]</h5>
            <ul class="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "text-right" : "")">
                <li><strong class="text-truncate">@Localizer["Name", "Booking"]:</strong> @Model.Buyer.FullName</li>
                <li><strong class="text-truncate">@Localizer["Phone", "Booking"]:</strong> @Model.Buyer.PhoneNumber</li>
            </ul>

            <h5 class="text-truncate">@Localizer["SellerInformation", "Booking"]</h5>
            <ul class="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "text-right" : "")">
                <li><strong class="text-truncate">@Localizer["Name", "Booking"]:</strong> @Model.Seller.FullName</li>
                <li><strong class="text-truncate">@Localizer["Phone", "Booking"]:</strong> @Model.Seller.PhoneNumber</li>
            </ul>

            <h5 class="text-truncate">@Localizer["CarDetails", "Booking"]</h5>
            <ul class="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "text-right" : "")">
                <li><strong class="text-truncate">@Localizer["Name", "Booking"]:</strong> @(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? Model.Car.NameAr : Model.Car.NameEn)</li>
                <li><strong class="text-truncate">@Localizer["Price", "Booking"]:</strong> @Model.Car.SellingPrice @Localizer["Currency", "Booking"]</li>
                <li><strong class="text-truncate">@Localizer["Kilometers", "Booking"]:</strong> @Model.Car.Kilometers</li>
                <li><strong class="text-truncate">@Localizer["Transmission", "Booking"]:</strong> @Model.Car.TransmissionType.NameAr</li>
                <li><strong class="text-truncate">@Localizer["FuelType", "Booking"]:</strong> @Model.Car.FuelType.NameAr</li>
                <li><strong class="text-truncate">@Localizer["Brand", "Booking"]:</strong> @Model.Car.Brand.NameAr</li>
            </ul>

            <h5 class="text-truncate">@Localizer["CarImage", "Booking"]</h5>
            <img src="@Model.Car.ImageUrl" alt="@Localizer["CarImageAlt", "Booking"]" class="img-fluid" width="300" />
            <br /><br />
            <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary text-truncate">@Localizer["BackToBookings", "Booking"]</a>
        </div>
    </div>
}
else
{
    <p class="text-danger text-truncate" dir="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">@Localizer["BookingNotAvailable", "Booking"]</p>
}