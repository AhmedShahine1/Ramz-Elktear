@model Ramz_Elktear.core.DTO.SettingModels.AddSettingDto

<h2><span class="text-truncate">Add New Setting</span></h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label><span class="text-truncate">Image Type</span></label>
        <select asp-for="ImageType" class="form-control" asp-items="@(new SelectList(ViewBag.SettingTypes))">
            <option value=""><span class="text-truncate">-- Select Type --</span></option>
        </select>
    </div>

    <div class="mb-3">
        <label><span class="text-truncate">Upload Image</span></label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">
        <span class="text-truncate">Save</span>
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <span class="text-truncate">Cancel</span>
    </a>
</form>
