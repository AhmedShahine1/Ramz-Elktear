@model RegisterUser

@{
    ViewData["Title"] = "التسجيل";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<h3 class="text-center">@ViewData["Title"]</h3>

<form asp-action="Register" method="post" enctype="multipart/form-data" dir="rtl">
    <div class="form-group">
        <label asp-for="FullName">الاسم الكامل</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">رقم الهاتف</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">كلمة المرور</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageProfile">صورة الملف الشخصي</label>
        <input asp-for="ImageProfile" class="form-control-file" type="file" />
        <span asp-validation-for="ImageProfile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">تسجيل</button>
</form>