@model IEnumerable<PromotionDetails>

<div class="card">
    <div class="headerIndex">
        <h3>Promotions List</h3>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="bx bx-plus"></i> Add New Promotion
        </a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image (Arabic)</th>
                    <th>Image (English)</th>
                    <th>Redirct URL</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var promo in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td><img src="@promo.ImageAr" width="100" height="50" /></td>
                            <td><img src="@promo.ImageEn" width="100" height="50" /></td>
                            <td>
                                @if (!string.IsNullOrEmpty(promo.redirctURL))
                                {
                                    <a href="@promo.redirctURL" target="_blank">URL</a>
                                }
                                else
                                {
                                    <span>No URL available</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Promotion", new { id = promo.Id })" class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr><td colspan="4" class="text-center">No promotions found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
