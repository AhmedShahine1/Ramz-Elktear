@model IEnumerable<BranchDetails>

<div class="card">
    <div class="headerIndex">
        <h3><span class="text-truncate">Branch List</span></h3>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-success mb-3">
                <i class="bx bx-plus"></i> <span class="text-truncate">Add New Branch</span>
            </a>
            <a href="@Url.Action("AllBranchs","Report")" class="btn btn-info mb-3">
                <i class="bx bx-file"></i> <span class="text-truncate">Report</span>
            </a>
        </div>
    </div>    
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th><span class="text-truncate">Branch Name</span></th>
                    <th><span class="text-truncate">Address</span></th>
                    <th><span class="text-truncate">Email</span></th>
                    <th><span class="text-truncate">Phone Numbers</span></th>
                    <th><span class="text-truncate">Actions</span></th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var branch in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@branch.Name</td>
                            <td>@branch.Address</td>
                            <td>@branch.Email</td>
                            <td>@string.Join(", ", branch.PhoneNumber)</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Branch", new { id = branch.Id })">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "Branch", new { id = branch.Id })">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No branches found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
