@model CreateSubCategoryDTO

@{
    ViewData["Title"] = "Create SubCategory";
}

<h3>Create SubCategory</h3>

<form asp-action="Create">
    <div class="form-group">
        <label for="NameAr">Name (Arabic)</label>
        <input type="text" class="form-control" id="NameAr" name="NameAr" value="@Model?.NameAr" />
    </div>

    <div class="form-group">
        <label for="NameEn">Name (English)</label>
        <input type="text" class="form-control" id="NameEn" name="NameEn" value="@Model?.NameEn" />
    </div>

    <!-- Category Dropdown -->
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" id="CategoryId" name="CategoryId">
            <option value="">Select Category</option>
            @if (ViewData["Categories"] is List<SelectListItem> categoriesList)
            {
                foreach (var category in categoriesList)
                {
                    <option value="@category.Value">@category.Text</option>
                }
            }
            else
            {
                <option value="">No categories available</option>
            }
        </select>
    </div>

    <!-- Brand Dropdown -->
    <div class="form-group">
        <label for="BrandId">Brand</label>
        <select class="form-control" id="BrandId" name="BrandId">
            <option value="">Select Brand</option>
            @if (ViewData["Brands"] is List<SelectListItem> brandsList)
            {
                foreach (var brand in brandsList)
                {
                    <option value="@brand.Value">@brand.Text</option>
                }
            }
            else
            {
                <option value="">No brands available</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>
            <input type="checkbox" name="IsActive" value="true" @(Model?.IsActive ?? false ? "checked" : "") />
            Is Active
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
