@model IEnumerable<BankDetails>

<div class="card">
    <div class="headerIndex">
        <h3><span class="text-truncate">Bank List</span></h3>
        <a href="@Url.Action("Create")" class="btn btn-success mb-3">
            <i class="bx bx-plus"></i> <span class="text-truncate">Add New Bank</span>
        </a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th><span class="text-truncate">Bank Name</span></th>
                    <th><span class="text-truncate">Address</span></th>
                    <th><span class="text-truncate">Swift Code</span></th>
                    <th><span class="text-truncate">IBAN</span></th>
                    <th><span class="text-truncate">Actions</span></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var bank in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@bank.Name</td>
                            <td>@bank.Address</td>
                            <td>@bank.SwiftCode</td>
                            <td>@bank.IBAN</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Bank", new { id = bank.Id })">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "Bank", new { id = bank.Id })">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No banks found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
