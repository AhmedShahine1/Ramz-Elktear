@model IEnumerable<BankDetails>
@{
    ViewData["Title"] = Localizer["BankList", "Banks"];
}
<div class="card">
    <div class="headerIndex">
        <h3><span class="text-truncate">@Localizer["BankList", "Banks"]</span></h3>
        <a href="@Url.Action("Create")" class="btn btn-success mb-3">
            <i class="bx bx-plus"></i> <span class="text-truncate">@Localizer["AddNewBank", "Banks"]</span>
        </a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th><span class="text-truncate">@Localizer["BankName", "Banks"]</span></th>
                    <th><span class="text-truncate">@Localizer["Address", "Banks"]</span></th>
                    <th><span class="text-truncate">@Localizer["SwiftCode", "Banks"]</span></th>
                    <th><span class="text-truncate">@Localizer["IBAN", "Banks"]</span></th>
                    <th><span class="text-truncate">@Localizer["Actions", "Common"]</span></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var bank in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@bank.Name</td>
                            <td>@bank.Address</td>
                            <td>@bank.SwiftCode</td>
                            <td>@bank.IBAN</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Bank", new { id = bank.Id })">
                                            <i class="bx bx-edit-alt me-1"></i> @Localizer["Edit", "Common"]
                                        </a>
                                        <form id="delete-form-@bank.Id" method="post" asp-action="Delete" asp-controller="Bank" asp-route-id="@bank.Id" style="display:none;">
                                            @Html.AntiForgeryToken()
                                        </form>

                                        <a class="dropdown-item" href="#" onclick="event.preventDefault(); document.getElementById('delete-form-@bank.Id').submit();">
                                            <i class="bx bx-trash me-1"></i> @Localizer["Delete", "Common"]
                                        </a>

                                    </div>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">@Localizer["NoBanksFound", "Banks"]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>