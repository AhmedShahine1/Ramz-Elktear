@model BankDetails
@{
    ViewData["Title"] = Localizer["EditBank", "Banks"];
}
<div class="row">
    <div class="col-xxl">
        <div class="card mb-6">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0 text-truncate">@Localizer["EditBank", "Banks"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" dir="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label text-truncate" for="name">@Localizer["BankName", "Banks"]</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="name-icon" class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="name"
                                       name="Name"
                                       placeholder="@Localizer["BankName", "Banks"]"
                                       value="@Model?.Name"
                                       required />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label text-truncate" for="address">@Localizer["Address", "Banks"]</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="address-icon" class="input-group-text">
                                    <i class="bx bx-buildings"></i>
                                </span>
                                <input type="text"
                                       id="address"
                                       name="Address"
                                       class="form-control"
                                       placeholder="@Localizer["Address", "Banks"]"
                                       value="@Model?.Address"
                                       required />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label text-truncate" for="swiftCode">@Localizer["SwiftCode", "Banks"]</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="swiftCode-icon" class="input-group-text">
                                    <i class="bx bx-code"></i>
                                </span>
                                <input type="text"
                                       id="swiftCode"
                                       name="SwiftCode"
                                       class="form-control"
                                       placeholder="@Localizer["SwiftCode", "Banks"]"
                                       value="@Model?.SwiftCode"
                                       required />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-6">
                        <label class="col-sm-2 col-form-label text-truncate" for="iban">@Localizer["IBAN", "Banks"]</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="iban-icon" class="input-group-text">
                                    <i class="bx bx-credit-card"></i>
                                </span>
                                <input type="text"
                                       id="iban"
                                       name="IBAN"
                                       class="form-control"
                                       placeholder="@Localizer["IBAN", "Banks"]"
                                       value="@Model?.IBAN"
                                       required />
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary text-truncate">@Localizer["Save", "Common"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>