@model UpdateCategoryDTO

<h3>@Localizer["EditCategory", "Category"]</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>@Localizer["NameArabic", "Category"]</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["NameEnglish", "Category"]</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionArabic", "Category"]</label>
        <textarea asp-for="DescriptionAr" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionEnglish", "Category"]</label>
        <textarea asp-for="DescriptionEn" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["Image", "Category"]</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label>@Localizer["Active", "Category"]</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">@Localizer["SaveChangesButton", "Category"]</button>
</form>