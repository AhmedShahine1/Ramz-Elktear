@model Ramz_Elktear.core.DTO.EnginePositionModels.UpdateEnginePosition
<h3>@Localizer["EditEnginePosition", "EnginePosition"]</h3>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>@Localizer["NameArabic", "Common"]</label>
        <input asp-for="NameAr" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["NameEnglish", "Common"]</label>
        <input asp-for="NameEn" class="form-control" required />
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionArabic", "Common"]</label>
        <textarea asp-for="DescriptionAr" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["DescriptionEnglish", "Common"]</label>
        <textarea asp-for="DescriptionEn" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>@Localizer["Image", "Common"]</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label>@Localizer["Active", "Common"]</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">@Localizer["UpdateEnginePosition", "EnginePosition"]</button>
</form>
<p class="text-muted small mt-3">@Localizer["RequiredFieldsNote", "Common"]</p>
