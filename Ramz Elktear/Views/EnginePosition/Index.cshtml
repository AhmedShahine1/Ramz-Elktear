@model IEnumerable<EnginePositionDTO>
<div class="headerIndex">
    <h3><span class="text-truncate">@Localizer["EnginePositionList", "EnginePosition"]</span></h3>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="bx bx-plus"></i> <span class="text-truncate">@Localizer["AddNewEnginePosition", "EnginePosition"]</span>
    </a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">@Localizer["NameArabic", "Common"]</span></th>
            <th><i class="bx bx-text"></i> <span class="text-truncate">@Localizer["NameEnglish", "Common"]</span></th>
            <th><i class="bx bx-image"></i> <span class="text-truncate">@Localizer["Image", "Common"]</span></th>
            <th><i class="bx bx-check-circle"></i> <span class="text-truncate">@Localizer["Active", "Common"]</span></th>
            <th><i class="bx bx-cog"></i> <span class="text-truncate">@Localizer["Actions", "Common"]</span></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var enginePosition in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@enginePosition.NameAr</td>
                    <td>@enginePosition.NameEn</td>
                    <td>
                        @if (!string.IsNullOrEmpty(enginePosition.ImageUrl))
                        {
                            <img src="@enginePosition.ImageUrl" alt="Engine Position" style="width: 50px; height: 50px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Localizer["Image", "Common"]</span>
                        }
                    </td>
                    <td>
                        @if (enginePosition.IsActive)
                        {
                            <span class="badge bg-label-primary">
                                <i class="bx bx-check"></i> @Localizer["Active", "Common"]
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-label-danger">
                                <i class="bx bx-x"></i> @Localizer["Inactive", "Common"]
                            </span>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = enginePosition.Id })">
                                    <i class="bx bx-edit-alt me-1"></i> @Localizer["Edit", "Common"]
                                </a>
                                <form action="@Url.Action("Delete", new { id = enginePosition.Id })" method="post" class="dropdown-item">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn p-0" style="border: none; background: transparent; color: inherit;">
                                        <i class="bx bx-trash me-1"></i> @Localizer["Delete", "Common"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">@Localizer["NoEnginePositionsAvailable", "EnginePosition"]</td>
            </tr>
        }
    </tbody>
</table>